{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "paths": {
      "@core/*": [
        "core/*"
      ],
    },
    "baseUrl": ".",
  },
  "exclude": [
    "node_modules",
    "web/src/**/*"
  ],
  "include": [
    "core",
  ]
}